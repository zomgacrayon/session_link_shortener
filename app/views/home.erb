<div class="container">
<%= session[:email] %><br>
<a href="/logout">Logout</a>

  <center><h1>Sucess!</h1>
  <h2>You've logged into the Chamber of Secrets!</h2>
  <h3>Now prepare to get your socks blown off with our LINK SHORTENER!</h3></center>

</div>

<div class="container">
<form action="/urls" method="post">
    <b>URL:</b> <input type="text" name="url">
    <input type="submit" value="Shorten me, baby!">
</form><br>

<center><table width= 80% border=2>
  <tr>
    <th>id</th>
    <th>Shorten URL</th>
    <th>Click Count</th>
  </tr>

  <% @urls.each do |url| %>
    <tr>
      <td><%= url.id %></td>
      <td><a href="/short_url/<%= url.shorten_url %>"><%= url.shorten_url %></a></td>
      <td><%= url.times_clicked %></td>
    </tr>
  <% end %>
</table></center>
</div>